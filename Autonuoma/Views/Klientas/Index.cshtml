@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.Klientas>
@{
	ViewData["title"] = "Klientai";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

<div class="d-flex justify-content-center">
	<table class="entitylist table table-striped table-hover">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.AsmensKodas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Vardas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Pavarde)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.GimimoData)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Telefonas)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Epastas)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(model => item.AsmensKodas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Vardas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Pavarde)
				</td>
				<td>
					@Html.DisplayFor(model => item.GimimoData)
				</td>
				<td>
					@Html.DisplayFor(model => item.Telefonas)
				</td>
				<td>
					@Html.DisplayFor(model => item.Epastas)
				</td>
				<td>
					<a href="@Url.Action("Edit", new { id = item.AsmensKodas })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
					<a href="@Url.Action("Delete", new { id = item.AsmensKodas })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>